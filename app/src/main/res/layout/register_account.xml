<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="@dimen/padding_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/width_40dp"
                android:layout_height="@dimen/height_32dp"
                android:layout_marginTop="@dimen/margin_110dp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/payme_blue" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/pay_me"
                android:textColor="@color/black2"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/guidelineCenter"
                app:layout_constraintTop_toTopOf="@+id/imageView2" />

            <EditText
                android:id="@+id/bvnNumberEditText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_52dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:height="@dimen/height_60dp"
                android:background="@drawable/button_outline_blueberry"
                android:drawableEnd="@drawable/text_name"
                android:ems="10"
                android:hint=" BVN Number"
                android:inputType="textPersonName"
                android:padding="@dimen/padding_16dp"
                android:textColor="@color/black2"
                android:textColorHighlight="@color/blueberry"
                android:textColorHint="@color/black2"
                android:textColorLink="@color/blueberry"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/userBankAccountEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:background="@drawable/button_outline_blueberry"
                android:drawableEnd="@drawable/show_password"
                android:ems="10"
                android:hint="User Bank Account"
                android:inputType="textPassword"
                android:padding="@dimen/padding_16dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black2"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bvnNumberEditText" />

            <EditText
                android:id="@+id/userIDEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:background="@drawable/button_outline_blueberry"
                android:drawableEnd="@drawable/show_password"
                android:ems="10"
                android:hint="User ID "
                android:inputType="textPassword"
                android:padding="@dimen/padding_16dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black2"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userBankAccountEditText" />

            <EditText
                android:id="@+id/newPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:background="@drawable/button_outline_blueberry"
                android:drawableEnd="@drawable/show_password"
                android:ems="10"
                android:hint="New Password"
                android:inputType="textPassword"
                android:padding="@dimen/padding_16dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black2"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userIDEditText" />

            <EditText
                android:id="@+id/confirmPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:background="@drawable/button_outline_blueberry"
                android:drawableEnd="@drawable/show_password"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="@dimen/padding_16dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black2"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newPasswordEditText" />

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:height="@dimen/height_60dp"
                android:background="@drawable/button_fill_blueberry"
                android:fontFamily="@font/poppins_semibold"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/white2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmPasswordEditText" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:height="@dimen/height_60dp"
                android:background="@drawable/button_fill_cyanblue"
                android:fontFamily="@font/poppins_semibold"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/blueberry"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signUpButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>